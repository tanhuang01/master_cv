<?xml version="1.0" encoding="utf-8"?>
<com.congguangzi.master_cv.views._10_path_measure.PathLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.congguangzi.master_cv.views._10_path_measure.PathMeasureView
        android:id="@+id/path_measure"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="top" />

    <com.congguangzi.master_cv.views._10_path_measure.PathSearch
        android:id="@+id/path_search"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="220dp" />

    <Button
        android:id="@+id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:text="start" />

</com.congguangzi.master_cv.views._10_path_measure.PathLayout>